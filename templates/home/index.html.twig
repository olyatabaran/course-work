{% extends 'base.html.twig' %}

{% block title %}
    Welcome to USM University!
{% endblock %}

{% block body %}
<!-- ##### Featured Post Area Start ##### -->
<div class="featured-post-area pt-3">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-8">
                <div class="row">
            <ul class="single-blog-post featured-post-2"></ul>
                    <!-- Single Featured Post -->

                    <div class="col-12 col-lg-7">

                        <div class="single-blog-post featured-post">

                            <div class="post-thumb">
                                <a href="/news/{{ news.0.id }}"><img src="{{ news.0.image }}" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="/news/{{ news.0.id }}" class="post-title">
                                    <h6>{{ news.0.name }}</h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#">{{ news.0.author }}</a></p>
                                    <p class="post-excerp">{{ news.0.description }} </p>
                                    <p class="post-date"><span>{{ news.0.seconds }}</span><span></span></p>
                                    <!-- Post Like & Post Comment -->

                                    <div class="d-flex align-items-center">
                                        <a href="{{ path('likes', {'id': news.0.id}) }}" class="post-like"><img src="img/core-img/like.png" alt=""> <span>{{ news.0.likes.count }}</span></a>
                                        <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>{{ news.0.comments.count }}</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-12 col-lg-5">

                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post-2">
                            <div class="post-thumb">
                                <a href="/news/{{ news.1.id }}"><img src="{{ news.1.image }}" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="/news/{{ news.1.id }}" class="post-catagory">{{ news.1.name }}</a>
                                <div class="post-meta">
                                    <a href="#" class="post-title">
                                        <h6>{{ news.1.description }}</h6>
                                    </a>
                                    <p class="post-date"><span>{{ news.1.seconds }}</span><span></span></p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="{{ path('likes', {'id': news.1.id}) }}" class="post-like"><img src="img/core-img/like.png" alt=""> <span>{{ news.1.likes.count }}</span></a>
                                        <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>{{ news.1.comments.count }}</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post-2">
                            <div class="post-thumb">
                                <a href="/news/{{ news.2.id }}"><img src="{{ news.2.image }}" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="/news/{{ news.2.id }}" class="post-catagory">{{ news.2.name }}</a>
                                <div class="post-meta">
                                    <a href="#" class="post-title">
                                        <h6>{{ news.2.content }}</h6>
                                    </a>
                                    <p class="post-date"><span>{{ news.1.seconds }}</span><span></span></p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="{{ path('likes', {'id': news.2.id}) }}" class="post-like"><img src="img/core-img/like.png" alt=""> <span>{{ news.2.likes.count }}</span></a>
                                        <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>{{ news.2.comments.count }}</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-8 col-lg-4">
                <h3>Our Users</h3>
                {% for user in users %}
                <!-- Single Featured Post -->
                <div class="single-blog-post small-featured-post d-flex">
                    <div class="post-thumb">
                        <a href="#"><img src="/img/users/{{ user.image }}" alt=""></a>
                    </div>
                    <div class="post-data">
                        <a href="#" class="post-catagory">{{ user.name }}</a>
                        <div class="post-meta">
                            <a href="#" class="post-title">
                                <h6>{{ user.type }}</h6>
                            </a>
                            <p class="post-date"><span></span> <span></span></p>
                        </div>
                    </div>
                </div>
                {% endfor %}

                {% endblock %}
                {% block javascripts %}
                <script src="/js/likes.js"></script>
                 <script src="/js/newsSearch.js"></script>
                {% endblock %}