{% extends 'baseAdmin.html.twig' %}
{% block body %}
    <div class="row">
    <div class="col-3">
        <div class="list-group">
            <h2><a href="{{ path('admin_news') }}" class="list-group-item list-group-item-action">Новости</a></h2>
            <h2><a href="{{ path('admin_comment') }}" class="list-group-item list-group-item-action">Комментарии</a></h2>
            <h2><a href="{{ path('admin_department') }}" class="list-group-item list-group-item-action">Депаратаменты</a></h2>
            <h2><a href="{{ path('admin_users') }}" class="list-group-item list-group-item-action">Пользователи</a></h2>
            <h2><a href="{{ path('admin_text-block') }}" class="list-group-item list-group-item-action">Блоки</a></h2>
        </div>
    </div>
    <div class="col-9">
    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">Ключевое слово</th>
            <th scope="col">Название</th>
            <th scope="col">Содержание</th>
            <th scope="col">Удаление</th>
            <th scope="col">Редактирование</th>
            <th scope="col">Создание</th>
        </tr>
        </thead>
        <tbody>
        {% for text_block in text_blocks %}
            <tr>
                <td>{{ text_block.keyName }}</td>
                <td>{{ text_block.name }}</td>
                <td>{{ text_block.content }}</td>
                <td><a href="{{ path('admin_text-block_delete', {'id': text_block.id}) }}">Удалить</a></td>
                <td><a href="{{ path('admin_text-block_update', {'id': text_block.id}) }}">Редактировать</a></td>
                <td><a href="{{ path('admin_text-block_new') }}">Создать</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}