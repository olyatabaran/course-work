{% extends 'base.html.twig' %}



{% block body %}
<!-- ##### Featured Post Area Start ##### -->
<div class="featured-post-area pt-3">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-8">
                <div class="row">

                    <!-- Single Featured Post -->

                    <div class="col-12 col-lg-7">

                        <div class="single-blog-post featured-post">

                            <div class="post-thumb">
                                <a href="#"><img src="{{ department.name }}" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="#" class="post-title">
                                    <h6>{{ department.description }}</h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#"></a></p>
                                    <p class="post-excerp">{{ department.description }} </p>
                                    <p class="post-date"><span></span><span></span></p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="#" class="post-like"><img src="img/core-img/like.png" alt=""> <span>392</span></a>
                                        <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>10</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-5">



                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-4">
                {% for user in users %}
                    <!-- Single Featured Post -->
                    <div class="single-blog-post small-featured-post d-flex">
                        <div class="post-thumb">
                            <a href="#"><img src="img/bg-img/{{ user.image }}" alt=""></a>
                        </div>
                        <div class="post-data">
                            <a href="#" class="post-catagory">{{ user.name }}</a>
                            <div class="post-meta">
                                <a href="#" class="post-title">
                                    <h6>{{ user.type }}</h6>
                                </a>
                                <p class="post-date"><span></span> <span></span></p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
                {% endblock %}